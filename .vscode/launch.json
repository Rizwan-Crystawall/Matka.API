{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express App",
      "program": "${workspaceFolder}/bin/www",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--nolazy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Nodemon (Hot Reload)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/bin/www",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
